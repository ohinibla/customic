{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/customic/manage.py",
      "django": true,
      "justMyCode": false,
      "args": ["runserver"],
      "autoReload": {
        "enable": true
      }
    },
    {
      "name": "Celery Workers",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "cwd": "${workspaceFolder}/customic/",
      "console": "externalTerminal",
      "args": ["-A", "customic", "worker", "-l", "debug", "-P", "solo"]
      }
  ]
}
